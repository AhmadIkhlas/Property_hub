@model NeighborhoodModel
<form asp-controller="neighbourhood" asp-action="delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Area Name:</label><span>@Model.Name</span>
    </div>
    <div class="form-group">
        <label>City:</label><span>@Model.City.Name</span>
    </div>
    <div class="form-group">
        <button class="btn btn-danger" type="submit"><span class="glyphicon glyphicon-trash"></span>&nbsp; Yes</button>
        <button class="btn btn-success" type="button" data-dismiss="modal" ><span class="glyphicon glyphicon-circle-arrow-left"></span>&nbsp; No</button>
    </div>
</form>